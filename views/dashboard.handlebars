

<div class="card col-8 my-4 mx-auto text-center">
  <form class="form-group" id="post-form">
    <label for="editor">What is on your mind <strong>{{name}}</strong>? </label>
    <div id="editor"></div>
    <button class="btn btn-sm col-2 btn-primary" type="button" id="post-quill">Post</a>
  </form>
</div>


<div class="bg-light container text-center mx-auto custom-card col-2 custom-h2">
  <h4>Recent posts:</h4>
</div>
{{#if userPosts.length}}
  {{#each userPosts as |post|}}
  <div class="card custom-card mx-auto col-8 mb-4">
    {{#if post.trail}}
    <ul class="list-unstyled card-body">
      {{#each post.trail as |trail|}}
      {{#if trail.content}}
      <li class="media text-break">
        {{!-- <img src="..." class="mr-3 rounded" alt="..."> --}}
        <div class="media-body border-bottom py-1">
          <p class="mt-0 mb-1 card-text pb-1"><strong class="text-dark">{{trail.user.name}}</strong> </p>
          {{{trail.content}}}
        </div>
      </li>
      {{/if}}
      {{/each}}
    </ul>
    {{/if}}
    <h5 class="card-title mt-1 ml-1">
        {{{post.content}}}
    </h5>
    <div class="card-text text-end border-bottom">
    <p class="fst-italic fs-6">Posted on {{format_date createdAt}}</p>
  </div>
  </div>
  {{/each}}
{{/if}}

