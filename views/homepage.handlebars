{{#if posts.length}}
<div class="card" id="post-list">
   {{#each posts as |post|}}
  <div class="card-content">
    <div class="content">
       {{post.content}}
    </div>
  </div>
  <time>Posted by {{post.user.name}} on {{format_date createdAt}}</time>
  <footer class="card-footer">
    <button class="button is-success reblog-btn" type="button" id="{{post.id}}">Repost</button>
  </footer>
  {{/each}}
</div>
{{/if}}

<script src="./js/reblog-button.js"></script>
