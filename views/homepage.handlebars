{{#if posts.length}}
<div class="card col-6 my-4">
     {{#each posts as |post|}}
    <form class="field" id="post-form">
      <div class="d-flex justify-content-between">
        <div>
           Posted by {{post.user.name}}
        </div>
        <div>
           created on {{format_date createdAt}}
        </div>
   </div>
    <div class="control">
      <textarea class="form-control" style="min-width: 50%">{{post.content}}</textarea>
       
    </div>
    </form>
      <div class="card-body">
        <a href="#" class="btn btn-primary">rePOST</a>
      </div>
      {{/each}}
    </div>
    {{/if}}


