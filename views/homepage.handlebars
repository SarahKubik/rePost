{{#if posts.length}}
<div class="col-8 my-4 mx-auto" id="post-list">
  {{#each posts as |post|}}
  <div class="card ">
    {{#if post.trail}}
    <ul class="list-unstyled card-body ">
      {{#each post.trail as |trail|}}
      <li class="media">
        <img src="..." class="mr-3 rounded" alt="...">
        <div class="media-body">
          <p class="mt-0 mb-1 card-text">Posted by {{trail.name}} on {{format_date trail.createdAt}}</p>
          {{trail.content}}
          <p>---------------</p>
        </div>
      </li>
      {{/each}}
    </ul>
    {{/if}}
    
    <div class="card-body text-center">
      <h5 class="card-title">
          {{post.content}}
      </h5>
    </div>
    <div class="card-text text-center">
      <p>Posted by {{post.user.name}} on {{format_date createdAt}}</p>
    </div>
    {{#if post.follow_tag}}
    <p class="text-center" style="font-style: italic;">Click the post to see more...</p>
    {{/if}}
    <button class="btn col-2 mx-auto btn-primary mb-3 reblog" id="{{post.id}}">rePOST</button>
  </div>
  <br>
  {{/each}}
  </div>
{{/if}}


